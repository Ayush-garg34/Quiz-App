<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Which among the following is the correct order in which popular company Apple released them"
        android:textSize="20sp"
        android:padding="25sp"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        />

    <CheckBox
        android:id="@+id/Q10C1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="Mac, iPod, iPad, iPhone"
        android:layout_marginLeft="70sp"
        android:padding="15sp"
        />

    <CheckBox
        android:id="@+id/Q10C2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text=" Mac, iPhone, iPod, iPad"
        android:layout_marginLeft="70sp"
        android:padding="15sp"
        />
    <CheckBox
        android:id="@+id/Q10C3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="Mac, iPod, iPhone, iPad"
        android:layout_marginLeft="70sp"
        android:padding="15sp"
        />
    <CheckBox
        android:id="@+id/Q10C4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="Mac, iPad, ipod, iPhone"
        android:layout_marginLeft="70sp"
        android:padding="15sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10sp" />
    <Button
        android:id="@+id/Q10Submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFFFF"
        android:text="Submit"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="28sp"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10sp" />
    <Button
        android:id="@+id/Q10Next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFFFF"
        android:text="Next"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="28sp"
        android:gravity="center"/>
</LinearLayout>